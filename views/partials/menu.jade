.container#menu(ng-controller="MenuCtrl")
    //- loops through all sections
    .categories(ng-repeat="category in data.menu")
        .category {{category.name}}

        //- loops through all items in the sections and add determine if tow is odd
        .menu_item(ng-repeat="item in category.items", data-odd="{{isOddRow()}}")
            span.item_name {{item.name}}
            span.item_price {{formatCurrency(item.price, '$')}}
        //- resets the counter
        {{resetCounter()}}